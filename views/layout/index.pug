doctype html
html(lang="es")
    head
        meta(charset="ISO-8859-1")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Aventura | #{tituloPagina}
        link(rel="stylesheet", href="/css/app.css")
        block styles
    
    body.min-h-screen.bg-slate-900

        div.py-5
            h1.text-4xl.my-10.text-gray-200.drop-shadow-xl.font-extrabold.text-center Aventuras
                span.font-normal  Bakanes 
                p üó∫Ô∏è
        main(class="mx-auto container px-2")
            h2.text-center.text-gray-200.drop-shadow-xl.text-2xl.font-extrabold= tituloPagina 

            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md=error.msg

            if mensajes
                div(class='max-w-md mx-auto my-10')
                    each mensaje in mensajes
                        p.bg-lime-600.text-white.text-sx.text-center.p-2.mb-1.font-bold.rounded-xl=mensaje.msg
            else
                div(class='max-w-md mx-auto my-10')
                    p

            block contenido 

        block scripts 